<div>
  <div class="text-[25px] font-semibold ml-[20px]"><%- searchHeading %></div>
  <% if (typeof categories != 'undefined') { %>
  <div class="flex flex-col w-full px-[10px] pt-[20px]">
    <% categories.forEach(category => { %>
    <a href="/c/<%- category.url %>" class="bg-white w-full h-fit p-[20px] my-[10px] rounded-md border border-black hover:bg-violet-700 hover:text-white">
      <div class="font-bold text-[18px]"><%- category.name %></div>
      <% if (category.description != '') { %>
      <div class="text-[18px]"><%- category.description %></div>
      <% } %>
      <% if (category._count.topics > 0) { %>
      <div class="italic">(Includes <%- category._count.topics %> <%= category._count.topics === 1 ? 'topic' : 'topics' %>)</div>
      <% } else { %>
      <div class="italic">(There are no topics in this category)</div>
      <% } %>
    </a>
    <% }) %>
  </div>
  <% } else if (typeof topics != 'undefined') { %>
  <div class="flex flex-col w-full px-[10px] pt-[20px]">
    <% topics.forEach(topic => { %>
    <a href="/t/<%- topic.url %>" class="bg-white w-full h-fit p-[20px] my-[10px] rounded-md border border-black hover:bg-violet-700 hover:text-white flex flex-row items-center">
      <div class="w-[100px] h-[100px] mr-[20px]">
        <img src="<%- topic.image %>" class="w-full h-full object-cover">
      </div>
      <div class="w-[calc(100%-120px)]">
        <div class="font-bold text-[18px]"><%- topic.name %></div>
        <% if (topic.description != '') { %>
        <div class="text-[16px] line-clamp-2"><%- topic.description %></div>
        <% } %>
        <% if (topic._count.threads > 0) { %>
        <div class="italic">(Includes <%- topic._count.threads %> <%= topic._count.threads === 1 ? 'thread' : 'threads' %>)</div>
        <% } else { %>
        <div class="italic">(There are no threads in this topics)</div>
        <% } %>
      </div>
    </a>
    <% }) %>
  </div>
  <% } else if (typeof threads != 'undefined') { %>
  <div class="flex flex-col w-full px-[10px] pt-[20px]">
    <% threads.forEach(thread => { %>
    <div class="w-full h-fit rounded-lg px-[20px] bg-gray-50 border-[1px] border-gray-200 my-[10px] overflow-hidden">
      <div class="flex flex-row items-center justify-between h-[40px] px-[10px]">
        <a href="/user/<%- thread.author.username %>" class="h-full text-purple-500 hover:text-purple-600 flex items-center font-bold">@<%- thread.author.username %></a>
        <span class="italic text-[15px] font-bold text-gray-500">Posted on: <%- thread.createdAt %></span>
      </div>
      <a href="/t/<%- thread.topic.url %>/th/<%- thread.id %>/<%- thread.url %>" class="w-fit h-fit">
        <div class="hover:bg-gray-200 p-[10px]">
          <% if (thread.deleted === false) { %>
          <div class="text-[22px] font-semibold line-clamp-2">Title: <%- thread.title %></div>
          <div class="text-[18px] line-clamp-1 italic mt-[10px]"><%- thread.content.text %></div>
          <% if (typeof thread.content.image != 'undefined') { %>
          <div class="h-[300px] flex justify-center class= bg-<%- thread.content.image.bg %> p-[5px] rounded-md mt-[10px]">
            <img src="<%- thread.content.image.path %>" alt="postImage" class="h-full">
          </div>
          <% } %>
          <% } else { %>
          <div class="text-[20px] italic font-bold mt-[20px]">[Content Deleted]</div>
          <% } %>
        </div>
      </a>
    </div>
    <% }) %>
  </div>
  <% } %>
</div>